            messagingSenderId: "726968494460",
            
            // ضع هنا App ID الخاص بمشروعك
            appId: "1:726968494460:web:fce24056b34f8a47e1dcf9"
        };

        // تهيئة Firebase
        firebase.initializeApp(firebaseConfig);

        // إنشاء مراجع لخدمات Firebase
        const db = firebase.firestore();
        const auth = firebase.auth();
        const storage = firebase.storage();

        // =============================================
        // وظائف Firebase للتطبيق
        // =============================================

        // وظيفة لحفظ بيانات القنوات في Firestore
        async function saveChannelData(channelData) {
            try {
                // حفظ بيانات القناة في مجموعة "channels"
                const docRef = await db.collection('channels').add({
                    ...channelData,
                    timestamp: firebase.firestore.FieldValue.serverTimestamp()
                });
                console.log('تم حفظ بيانات القناة بنجاح:', docRef.id);
                return docRef.id;
            } catch (error) {
                console.error('خطأ في حفظ بيانات القناة:', error);
                return null;
            }
        }

        // وظيفة لجلب جميع القنوات من Firestore
        async function getAllChannels() {
            try {
                const snapshot = await db.collection('channels').get();
                const channels = [];
                snapshot.forEach(doc => {
                    channels.push({
                        id: doc.id,
                        ...doc.data()
                    });
                });
                console.log('تم جلب القنوات بنجاح:', channels.length);
                return channels;
            } catch (error) {
                console.error('خطأ في جلب القنوات:', error);
                return [];
            }
        }

        // وظيفة لحفظ بيانات المستخدم
        async function saveUserData(userData) {
            try {
                const user = auth.currentUser;
                if (user) {
                    await db.collection('users').doc(user.uid).set({
                        ...userData,
                        lastLogin: firebase.firestore.FieldValue.serverTimestamp()
                    });
                    console.log('تم حفظ بيانات المستخدم بنجاح');
                }
            } catch (error) {
                console.error('خطأ في حفظ بيانات المستخدم:', error);
            }
        }

        // وظيفة لرفع الصور إلى Firebase Storage
        async function uploadImage(file, path) {
            try {
                const storageRef = storage.ref().child(path);
                const snapshot = await storageRef.put(file);
                const downloadURL = await snapshot.ref.getDownloadURL();
                console.log('تم رفع الصورة بنجاح:', downloadURL);
                return downloadURL;
            } catch (error) {
                console.error('خطأ في رفع الصورة:', error);
                return null;
            }
        }

        // وظيفة لحفظ إحصائيات المشاهدة
        async function saveViewingStats(channelId, userId = null) {
            try {
                await db.collection('viewingStats').add({
                    channelId: channelId,
                    userId: userId || 'anonymous',
                    timestamp: firebase.firestore.FieldValue.serverTimestamp(),
                    userAgent: navigator.userAgent
                });
                console.log('تم حفظ إحصائيات المشاهدة');
            } catch (error) {
                console.error('خطأ في حفظ إحصائيات المشاهدة:', error);
            }
        }

        // مراقبة حالة تسجيل الدخول
        auth.onAuthStateChanged((user) => {
            if (user) {
                console.log('المستخدم مسجل الدخول:', user.uid);
                // يمكنك هنا إضافة منطق خاص بالمستخدمين المسجلين
            } else {
                console.log('المستخدم غير مسجل الدخول');
                // يمكنك هنا إضافة منطق للمستخدمين الضيوف
            }
        });

        // مثال على استخدام Firebase في التطبيق
        function initializeApp() {
            console.log('تم تهيئة التطبيق مع Firebase');
            
            // جلب القنوات من Firebase عند بدء التطبيق
            getAllChannels().then(channels => {
                if (channels.length > 0) {
                    console.log('تم العثور على قنوات محفوظة:', channels.length);
                    // يمكنك هنا عرض القنوات في الواجهة
                } else {
                    console.log('لا توجد قنوات محفوظة، استخدام البيانات الافتراضية');
                }
            });
        }

        // =============================================
        // باقي كود التطبيق الأصلي
        // =============================================

        // المتغيرات
        const sidebar = document.getElementById('sidebar');
        const overlay = document.getElementById('overlay');
        const menuButton = document.getElementById('menuButton');
        const livePage = document.getElementById('livePage');
        const searchPage = document.getElementById('searchPage');
        const eventPage = document.getElementById('eventPage');
        const arabSeriesPage = document.getElementById('arabSeriesPage');
        const liveButton = document.getElementById('liveButton');
        const eventButton = document.getElementById('eventButton');
        const bottomNav = document.getElementById('bottomNav');
        
        let sidebarOpen = false;

        // فتح/إغلاق القائمة الجانبية
        function toggleSidebar() {
            sidebarOpen = !sidebarOpen;
            if (sidebarOpen) {
                sidebar.classList.add('open');
                overlay.classList.add('show');
            } else {
                sidebar.classList.remove('open');
                overlay.classList.remove('show');
            }
        }

        // إغلاق القائمة الجانبية
        function closeSidebar() {
            sidebarOpen = false;
            sidebar.classList.remove('open');
            overlay.classList.remove('show');
        }

        // إظهار/إخفاء القائمة السفلية
        function showBottomNav() {
            bottomNav.classList.remove('hidden');
        }

        function hideBottomNav() {
            bottomNav.classList.add('hidden');
        }

        // تبديل الصفحات
        function showPage(targetPage, showNav = true) {
            // إخفاء جميع الصفحات
            document.querySelectorAll('.page').forEach(page => {
                page.classList.remove('active');
            });
            
            // إظهار الصفحة المطلوبة
            targetPage.classList.add('active');
            
            // إدارة القائمة السفلية
            if (showNav) {
                showBottomNav();
            } else {
                hideBottomNav();
            }
            
            // إغلاق القائمة الجانبية
            closeSidebar();
        }

        // أحداث النقر
        menuButton.addEventListener('click', toggleSidebar);
        overlay.addEventListener('click', closeSidebar);

        document.getElementById('searchButton').addEventListener('click', () => {
            showPage(searchPage, false);
        });

        document.getElementById('backButton').addEventListener('click', () => {
            showPage(livePage, true);
        });

        document.getElementById('eventSearchButton').addEventListener('click', () => {
            showPage(searchPage, false);
        });

        document.getElementById('eventBackButton').addEventListener('click', () => {
            showPage(livePage, true);
        });

        liveButton.addEventListener('click', () => {
            showPage(livePage, true);
        });

        eventButton.addEventListener('click', () => {
            showPage(eventPage, false);
        });

        // أحداث الأزرار الجديدة
        document.querySelectorAll('.channel-button[data-page]').forEach(button => {
            button.addEventListener('click', () => {
                const pageId = button.getAttribute('data-page');
                const targetPage = document.getElementById(pageId);
                if (targetPage) {
                    showPage(targetPage, false);
                }
            });
        });

        // أزرار العودة للصفحة الرئيسية
        document.querySelectorAll('.back-to-live').forEach(button => {
            button.addEventListener('click', () => {
                showPage(livePage, true);
            });
        });

        // البحث
        const searchInput = document.getElementById('searchInput');
        const searchResults = document.getElementById('searchResults');

        searchInput.addEventListener('input', (e) => {
            const term = e.target.value.toLowerCase();
            
            if (term.length > 0) {
                const results = [
                    'beIN SPORTS 1', 'beIN SPORTS 2', 'FIFA Club World Cup',
                    'Premier League', 'La Liga', 'Champions League',
                    'SSC SPORTS', 'MBC CHANNELS', 'ARABIC CHANNELS'
                ].filter(item => item.toLowerCase().includes(term));

                searchResults.innerHTML = results.map(result => `
                    <div class="search-result">
                        <div class="flex items-center">
                            <i class="fas fa-tv text-red-600 mr-3"></i>
                            <span class="text-red-800 font-semibold">${result}</span>
                        </div>
                    </div>
                `).join('');

                // حفظ عمليات البحث في Firebase (اختياري)
                if (term.length > 2) {
                    db.collection('searchQueries').add({
                        query: term,
                        timestamp: firebase.firestore.FieldValue.serverTimestamp(),
                        userAgent: navigator.userAgent
                    }).catch(error => {
                        console.error('خطأ في حفظ استعلام البحث:', error);
                    });
                }
            } else {
                searchResults.innerHTML = '';
            }
        });

        // تأثيرات الأزرار
        document.querySelectorAll('.channel-button').forEach(button => {
            button.addEventListener('click', function() {
                this.style.backgroundColor = '#fecaca';
                this.style.transform = 'scale(0.98)';
                setTimeout(() => {
                    this.style.backgroundColor = 'white';
                    this.style.transform = 'scale(1)';
                }, 200);

                // حفظ إحصائيات النقر على الأزرار
                const channelName = this.textContent.trim();
                saveViewingStats(channelName).catch(error => {
                    console.error('خطأ في حفظ إحصائيات النقر:', error);
                });
            });
        });

        // إغلاق القائمة عند النقر خارجها
        document.addEventListener('click', (e) => {
            if (sidebarOpen && !sidebar.contains(e.target) && !menuButton.contains(e.target)) {
                closeSidebar();
            }
        });

        // تهيئة التطبيق عند تحميل الصفحة
        document.addEventListener('DOMContentLoaded', () => {
            initializeApp();
        });
    </script>

</body>
</html>
